<%- include('partials/header') -%>

<main>
    <section class="forgot h-custom  flex justify-center items-center w-1/3 mx-auto py-16 mb-20">
        <img class="w-2/12 mr-10" src="/images/birdlogo.png" alt="">
        <form action="/users/login/forgotpassword", method="POST"  class="flex flex-col py- border-2  rounded-lg w-custom">
            <legend class="text-xl text-blue-700 font-bold my-2">Please Enter your registered Email</legend>
            <% if(error) { %>
                <h3 class="text-red-500 font-bold"><%= error %></h3>
            <% } %>
            <% if(info) { %>
                <h3 class="text-green-500 font-bold"><%= info %></h3>
            <% } %>
            <input type="email" name="email" placeholder="Enter Email" class="p-3  my-2 rounded-lg border-2 ">
            <input type="submit" value="Send Verification Code" class="p-3 bg-blue-500 text-white font-bold my-2 rounded-lg hover:bg-blue-400 cursor-pointer">
        </form>
    </section>
</main>

