<% include partials/header %>

    <main class="m-20 min-screen-h flex justify-center items-center" >

        <section class="registration rounded-lg">
            <img class="w-3/12" src="/images/birdlogo.png" alt="">
            <h2 class="text-xl text-green-600 font-bold text-center mb-5">Registration</h2>
            <form action="/users/register" method="POST" class=" p-5 flex flex-col" enctype="multipart/form-data">
                <% if(error) { %>
                    <p class="text-red-500 "><%= error %></p>
                <% } %>
                <input type="text" name="name" placeholder="Name" class="p-2 border border-grey-200 rounded-xl mb-5">
                <input type="text" name="username" placeholder="Username" class="p-2 border border-grey-200 rounded-xl mb-5">
                <input type="email" name="email" placeholder="Email" class="p-2 border border-grey-200 rounded-xl mb-5">
                <input type="password" name="password" placeholder="Password" required class="p-2 border border-grey-200 rounded-xl mb-5">
                <input type="file" name="profilePic" placeholder="Add Profile image" class="p-2 border border-grey-200 rounded-xl mb-5">
                <button type="submit" class="px-3 py-2 bg-green-600 rounded-xl hover-bg-geen-900 text-white font-bold">Register</button>
            </form>
        </section>
    </main>

