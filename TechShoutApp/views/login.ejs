<% include partials/header %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tech Shout</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link rel="stylesheet" href="/stylesheets/tailwindstyle.css">
</head>
<body class="">
  <header>

  </header>

  <main class="main">
    <div class="circles">
      <div class="blue_circle"></div>
      <div class="pink_circle"></div>
      <div class="green_circle"></div>
      <div class="orange_circle"></div>
    </div>


    <div class="container">
      <div class="inside_container">
       <div class="flex  items-center">
          <div class="left">
            <video autoplay loop muted>
              <source src="/videos/login_video.mp4" type="video/mp4"> 
            </video>
          </div>
<!-- Form to Login  -->
          <div class="right ml-28">
              <section class="">
                  <h2 class="text-xl text-green-600 font-bold text-center mb-5">Login</h2>
                  <div class="mb-5 flex justify-between items-center">
                      <a href="/auth/google" class="px-3 py-2 " ><img class="w-full rounded-lg" src="/images/google.jpeg" alt="image"></a>
                      <a href="/auth/github" class="px-3 py-2 " ><img class="w-full rounded-lg" src="/images/github.jpg" alt="image"></a>
                      <!-- <a href="/auth/github" class="px-3 py-2 bg-gray-600 hover:bg-green-900 text-white font-bold">Github Login <i class="fab fa-github text-black"></i></a> -->
                  </div>
          
          
                  <form action="/users/login" method="POST" class="border-2 p-1 flex flex-col">
                      <% if(error) { %>
                          <p class="text-red-500 "><%= error %></p>
                      <% } %>
                      <% if(success) { %>
                          <p class="text-green-500 "><%= success %></p>
                      <% } %>
                      <% if(info) { %>
                          <p class="text-green-500 "><%= info %></p>
                      <% } %>
                      <input type="email" name="email" placeholder="Enter Your Email" class="input p-2 border border-grey-500 mb-5">
                      <input type="password" name="password" placeholder="Enter Your Password" class="input p-2 border border-grey-500 mb-5">
                      <button type="submit" class="px-3 py-2 rounded-lg transition-all bg-green-600 hover:bg-blue-900 text-white font-bold">Login</button>
                  </form>
                  <a href="/users/login/forgotpassword" class="text-sm text-blue-600">Forgot Password ?</a>
              </section>
          

          </div>
       </div>
      </div>
    </div>
  </main>


  <footer>
    <div class=" footer_pink_circle"></div>
      <div class=" footer_green_circle"></div>
  </footer>
</body>
</html>
